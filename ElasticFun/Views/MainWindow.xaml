                </Button>
                <Button Command="{Binding Init}" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{DynamicResource SquareButtonStyle}" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF666666">
